<!-- views/index.js -->

<!DOCTYPE html>
<html>
<head>
  <title>CatOnline &mdash; Lobby</title>
  <link rel="stylesheet" href="/styles/style.css">
  <link rel="SHORTCUT ICON" href="images/favicon.ico" />
  <link rel="icon" href="images/favicon.ico" type="image/ico" />
</head>

<body>

  <%- include( 'header.ejs' ) %>

  <div class="lobby content">

    <div class="frame" id="messages">
      <div class="panel" id="messages">
        <div class="messages public">
          <ul class="messages">
            <li class='message admin center'><span>Welcome to CatOnline chat!</span></li>
          </ul>
        </div>
        <div class="messages status">
          currently online: <span class="currently-online">0</span>
        </div>
        <div class="messages input">
          <input class="messages" placeholder="type your message here ...">
        </div>
      </div>
    </div>

    <div class="frame" id="lists">
      <!-- show any messages -->
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <div class="lobby container" id="host-new-game">
        <form action="/newgame" method="get">
          <button type="submit">Host a game</button>
        </form>
      </div>

      <div class="lobby container" id="current-games">
        <p>Your current games</p>
        <table class="lobby gamelist" id="current-games">
          <tr class="lobby header">
            <th>Scenario</th>
            <th>Humans</th>
            <!--<th>CPUs</th>-->
            <th>Owner</th>
            <th>Turn</th>
            <th>Date modified</th>
          </tr>
          <% if (games.current.length > 0) {
            for (let g=0; g< games.current.length; g++) { %>
              <tr class="lobby mini" id="mini<%=games.current[g]._id%>">
                <th><%=games.current[g].scenario%></th>
                <th>
                  <span class="current-number"><%=games.current[g].players.length%></span>/<span class="required-number"><%=games.current[g].numHumans%></span>
                </th>
                <!--<th><%=games.current[g].numCPUs%></th>-->
                <th><%=games.current[g].author%></th>
                <th><%=games.current[g].turn%></th>
                <th><%= games.current[g].updated %></th>
              </tr>
              <tr class="lobby max" id="max<%=games.current[g]._id%>" players="<%= JSON.stringify(games.current[g].players) %>">
                <th colspan="6">
                  <div class="lobby max-container">
                    <div class="max info">
                      <p class="victory-points-info">
                        <span style="font-weight:500;"><%=games.current[g].VPs%></span>&nbsp
                        Victory Points required for victory
                      </p>
                      <% for (let p=0; p< games.current[g].numHumans; p++) { %>
                        <p>
                          <span class="num">Player <%=(p+1)%>:&nbsp&nbsp</span>
                          <span class="name" style="font-weight:500;"><%= games.current[g].players[p] ? games.current[g].players[p].name : '' %></span>
                        </p>
                      <% } %>
                    </div>
                    <div class="lobby max button">
                      <button class="lobby share link"id="share<%=games.current[g]._id%>">Share</button>
                      <button class="lobby leave link"id="leave<%=games.current[g]._id%>">Leave</button>
                      <button class="lobby play link" id="play<%=games.current[g]._id%>">Play</button>
                    </div>
                  </div>
                </th>
              </tr>
            <% }
          } else { %>
            <tr class="lobby null">
              <th colspan="7">
                <div class="lobby null-container">
                  no current games ...
                </div>
              </th>
            </tr>
          <% } %>
        </table>
      </div>

      <div class="lobby container" id="available-games">
        <p>Available games</p>
        <table class="lobby gamelist" id="available-games">
          <tr class="lobby header">
            <th>Scenario</th>
            <th>Humans</th>
            <!--<th>CPUs</th>-->
            <th>Owner</th>
            <th>Date created</th>
          </tr>
          <% if (games.available.length > 0) {
            for (let g=0; g< games.available.length; g++) { %>
              <tr class="lobby mini" id="mini<%=games.available[g]._id%>">
                <th><%=games.available[g].scenario%></th>
                <th>
                  <span class="current-number"><%=games.available[g].players.length%></span>/
                  <span class="required-number"><%=games.available[g].numHumans%><span>
                </th>
                <!--<th><%=games.available[g].numCPUs%></th>-->
                <th><%=games.available[g].author%></th>
                <th><%= games.available[g].created %></th>
              </tr>
              <tr class="lobby max" id="max<%=games.available[g]._id%>" players="<%= JSON.stringify(games.available[g].players) %>">
                <th colspan="5">
                  <div class="lobby max-container">
                    <div class="max info">
                      <p class="victory-points-info">
                        <span style="font-weight:500;"><%=games.available[g].VPs%></span>&nbsp
                        Victory Points required for victory
                      </p>
                      <% for (let p=0; p< games.available[g].numHumans; p++) { %>
                        <p>
                          <span class="num">Player <%=(p+1)%>:&nbsp&nbsp</span>
                          <span class="name" style="font-weight:500;"><%= games.available[g].players[p] ? games.available[g].players[p].name : '' %></span>
                        </p>
                      <% } %>
                    </div>
                    <div class="lobby max button">
                      <button class="lobby join link" id="<%=games.available[g]._id%>">Join</button>
                    </div>
                  </div>
                </th>
              </tr>
            <% }
          } else { %>
            <tr class="lobby null">
              <th colspan="7">
                <div class="lobby null-container">
                  no available games ...
                </div>
              </th>
            </tr>
          <% } %>
        </table>
      </div>

      <div class="lobby container" id="private-code">
        <p>Enter a private code</p>
        <span>
          <form action="/join" method="post">
            <input type="text" name="code" pattern=".{6,}" required>
            <button type="submit" id="join-by-code">Join</button>
          </form>
        </span>
      </div>
    </div>



    <div style="display:none;" class="jumbotron text-center">
      <h1>This is the lobby page</h1>


      <form action="/newgame" method="get">
        <button type="submit">Host a game</button>
      </form>

      <div class="active-game-container">
        Join an existing game
        <table class="game-list-table">
          <tr>
            <th>Scenario</th>
            <th>Humans</th>
            <th>CPUs</th>
            <th>Owner</th>
            <th>Victory Points</th>
            <th>Turn</th>
            <th>Date Created</th>
          </tr>
          <% for (var g=0; g< games.length; g++) { %>
            <tr class="game-list-item" id="<%=games[g]._id%>">
              <th><%=games[g].scenario%></th>
              <th>1/<%=games[g].numHumans%></th>
              <th><%=games[g].numCPUs%></th>
              <th><%=games[g].author%></th>
              <th><%=games[g].VPs%></th>
              <th><%=games[g].turn%></th>
              <th><%= games[g].created %></th>
            </tr>
          <% } %>
        </table>
      </div>

  </div>

  <script src='/socket.io/socket.io.js'> </script>
  <script src='http://code.jquery.com/jquery-latest.min.js'> </script>
  <script src='/resources/lib.js'> </script>
