    forceSwitchView = function() {
      let domobj = $('button.switch-view');
      if (domobj.prop('id') === 'wide') {
        console.log('hi');
        maxWidthForNarrView = Math.max( maxWidthForNarrView, $(window).width()*1.11 );
        windowResizeNarr();
      } else if (domobj.prop('id') === 'narrow') {
        minWidthForWideView = Math.min( minWidthForWideView, $(window).width()*0.9 );
        windowResizeWide();
        console.log( 'test');
      }
      console.log( minWidthForWideView, maxWidthForNarrView );
      console.log( domobj.prop('id') );
    };
    handleClickListitem = function(event) {

      id = event.target.parentNode.id || event.target.parentNode.parentNode.id;

      mini = $( '#' + id.replace(/max/, 'mini') );
      if (id !== expandedid) {
        mini.children()
          .css( 'border-bottom-style', 'none' )
          .css( 'background-color', '#eee' );
      } else {
        mini.children()
          .css( 'border-bottom-style', 'solid' )
          .css( 'background-color', '#ddd' );
      }
      mini.siblings().filter('.mini').children()
        .css( 'border-bottom-style', 'solid' )
        .css( 'background-color', '#ddd' );

      max =  $( '#' + id.replace(/mini/, 'max') );
      if (id !== expandedid) {
        max.css( 'display', 'table-row' )
          .children().css( 'background-color', '#eee' );
      } else {
        max.css( 'display', 'none' )
          .children().css( 'background-color', '#ddd' );
      }
      max.siblings().filter( '.max' )
        .css( 'display', 'none' )
        .children().css( 'background-color', '#ddd' );

      if (id.indexOf('mini') > -1) {
        expandedid = (id !== expandedid ? id : null);
      }

    }
    handleJoinButton = function(event) {
      console.log( 'trying to join' );
      console.log(event);
    }
    setPlayButtonEnableDisable = function(object) {
      const id = object.id.replace(/mini/, '').replace(/max/, '');
      const current = $('tr#mini' + id + ' span.current-number')[0].innerHTML;
      const required= $('tr#mini' + id + ' span.required-number')[0].innerHTML;
      console.log('button.play#' + id);
      $('button#play' + id).prop( 'disabled', (parseInt(current) < parseInt(required) ? 'disabled' : 'enabled' ) );
    }

    var copytextbox, expandedid, tablerows, tablelinks, socket,
      minWidthForWideView = 1200, // want user to be able to change this later on
      maxWidthForNarrView = 1000;

    socket = io();

    $(document).ready(function(){

      copytextbox = $('#copytextbox');

      tablerows = $("tr.lobby");
      tablerows.click( function(event) {
        handleClickListitem(event);
      });
      tablerows.filter('.mini').each( function(key,value) {
        setPlayButtonEnableDisable(value);
      });

      tableplaylinks = $(".lobby.play.link");
      tableplaylinks.click( function(event) {
        window.location.href=("/play/" + event.target.id);
      });

      tablejoinlinks = $(".lobby.join.link");
      tablejoinlinks.click( function(event) {
        window.location.href=("/lobby/" + event.target.id);
      });

      tablesharelinks = $(".lobby.share.link");
      tablesharelinks.click( function(event) {
        let text = event.target.id.replace(/share/, '');
        // use the copytextbox

        text.select();
        document.execCommand('Copy');
        alert( 'copied to clipboard' );
      })


      if ($(window).width() < maxWidthForNarrView || checkForMobile()) forceSwitchView();
      window.addEventListener( 'resize', function() {
        if ($(window).width() < minWidthForWideView) { // safari doesn't catch this?
          windowResizeNarr();
        } else if ($(window).width() > maxWidthForNarrView) {
          windowResizeWide();
        }
      });


    });

  </script>
